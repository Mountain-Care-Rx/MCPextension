{
  "name": "CRM+",
  "version": "2025.6.25",
  "description": "Enhanced CRM Tool for MtnCareRx",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://app.mtncarerx.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "phoneUtils.js",
        "modules/*"
      ],
      "matches": [
        "*://app.mtncarerx.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "crm-plus@example.com",
      "strict_min_version": "109.0"
    }
  }
}
